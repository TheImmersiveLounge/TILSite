---
import Button from "./button.astro";
const link = "/Contact";
const name = "redirect to contact";

// adjust these variable to change your content
const text = "Send us an email!";
const largeText = "Do you want to work with us?";
const smallText =
  "Whether you're an artist, a studio, or an audio company, we love to collaborate.";
---

<section
  class="object-fill mt-60 flex h-[500px] gap-4 bg-[url('/photos/crop/88rs_focus.jpg')] bg-cover text-center text-white"
>
  <div
    class="flex h-full w-full flex-col items-center justify-center bg-black bg-opacity-30"
  >
    <h1
      class="mx-20 pb-10 text-4xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)] md:text-6xl"
    >
      {largeText}
    </h1>
    <h2
      class="mx-10 mb-20 pb-10 text-xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)] md:text-2xl"
    >
      {smallText}
    </h2>
    <Button link={link} text={text} name={name} />
  </div>
</section>